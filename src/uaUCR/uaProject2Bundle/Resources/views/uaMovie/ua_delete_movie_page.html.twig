{% extends "uaUCRuaProject2Bundle::ua_base_admin.html.twig"%} 
{%block menuAdmin%}{%endblock%}
{%block banner%}{%endblock%}
{%block rightBar%}{%endblock%}


{%block content%}

<h1 > Are you sure to remove this movie?</h1>
<div  class="section group"><form name="form1" id="form1" action="{{ path('ua_ucr_ua_project2_delete_movie',{'codMovie':allMovies.getCodmovie()} )}} " method="post" >
        <div class="grid_1_of_4 images_1_of_4">
            <h3>Title: </h3>
            <h5>{{allMovies.getTitle()}}</h5>
            <h3>Description: </h3>
            <h5>{{allMovies.getDescription()}}</h5>
            <h3>Actors: </h3>
                {% for actor in allActors %}
                <h5>{{actor.getName()}} {{actor.getLastname()}}</h5>
                {%endfor%}

                <input type="submit" value="Delete Movie" name="btnDeleteM" id="btnDeleteM"/> </input>                                    


       </div>
    </form>
</div>
{%endblock%}
